rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================================
    // User document â€” only the owner can read/write
    // ==========================================
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // All subcollections under a user are also owned by that user
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Nested subcollections (e.g., /users/{uid}/celestial/natalChart)
      match /{subcollection}/{docId}/{subSub}/{subSubId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
